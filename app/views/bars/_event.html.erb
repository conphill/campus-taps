<h3>Advertise an event at <%= @bar.name %>:</h3>
<%= form_for Event.new, :html => {:multipart => true} do |f| %>
	<p><%= f.label :name %>
	<%= f.text_field :name %></p>
	<p><%= f.label :description %>
	<%= f.text_field :description %></p>
	<p><%= f.label :date %>
	<%= f.text_field :date %></p>
	<p><%= f.label :flyer %>
	<%= f.file_field :flyer %></p>
	<%= hidden_field_tag 'event[bar_id]', @bar.id %>
	<%= f.submit "Save" %>
<% end %>	