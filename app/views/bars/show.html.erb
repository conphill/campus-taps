<br /><br />
<%- if manager_signed_in? -%>
<div id="manager-controls">
	<%= link_to 'Edit', edit_bar_path(@bar) %> | <%= link_to 'Back', bars_path %>
</div>
<%- end -%>

<p id="notice"><%= notice %></p>

<%- if @bar.logo.file? -%><%= image_tag @bar.logo.url(:small) %><%- end -%>

<p>
  <b>Name:</b>
  <%= @bar.name %>
</p>
<p>
  <b>Description:</b>
  <%= @bar.description %>
</p>
<p>
  <b>Specials:</b>
  <%= @bar.specials %>
</p>
<p>
  <b>Address:</b>
  <%= @bar.address %>
</p>
<p>
  <b>City:</b>
  <%= @bar.city %>
</p>
<p>
  <b>State:</b>
  <%= @bar.state.state_abbr %>
</p>
<p>
  <b>Zip:</b>
  <%= @bar.zip %>
</p>
<p>
  <b>Region:</b>
  <%= @bar.region.name %>
</p>
<p>
  <b>Phone:</b>
  <%= @bar.phone %>
</p>

<%- if !manager_signed_in? -%><%= render 'reviews' %><%- end -%>
<%- if manager_signed_in? -%><%= render 'event' %><%- end -%>