<div id="manager-controls">
	<%= link_to 'Edit', edit_store_path(@store) %> | <%= link_to 'Back', stores_path %>
</div>

<p id="notice"><%= notice %></p>

<p>
  <b>Name:</b>
  <%= @store.name %>
</p>

<p>
  <b>Description:</b>
  <%= @store.description %>
</p>

<p>
  <b>Address:</b>
  <%= @store.address %>
</p>

<p>
  <b>City:</b>
  <%= @store.city %>
</p>

<p>
  <b>State:</b>
  <%= @store.state.state_abbr %>
</p>

<p>
  <b>Zip:</b>
  <%= @store.zip %>
</p>

<p>
  <b>Phone:</b>
  <%= @store.phone %>
</p>

Prices:<br />
<%= render @store.products %>
<br />
Add Product:
<%= form_for [@store,@product] do |f| %>
  <div class="field">
    <%= f.label :brand %><br />
    <%= f.text_field :brand %>
  </div>
  <div class="field">
    <%= f.label :name, "Size (i.e., 12pk, 1L)" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    $ <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :product_category_id %><br />
    <%= f.text_field :product_category_id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

