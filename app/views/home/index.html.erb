<div id="home_feed">
	<ul id="feed_container"></ul>
</div>

<h3>Twitter Feed</h3>
<div id="twitter_update_list">
<script type="text/javascript" src="http://twitter.com/javascripts/blogger.js"></script>
<script type="text/javascript" src="http://twitter.com/statuses/user_timeline/nytimes.json?callback=twitterCallback2&count=6"></script>
</div><!--end twitter_update_list-->

<div id="home-specials">
	<% @events.each do |e| %>
	<div>
		<p><%= e.name %></p>
		<p><%= link_to e.bar.name, e.bar %></p>
		<p><%= e.description %></p>
		<p><%= image_tag e.flyer.url(:small), :size => '300x300' %></p>
	</div>
	<% end %>
</div>