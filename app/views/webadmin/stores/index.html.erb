<h1>Listing stores</h1>

<%= link_to 'New Store', new_webadmin_store_path %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Address</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Phone</th>
    <th></th>
    <th></th>
  </tr>

<% @stores.each do |store| %>
  <tr>
    <td><%= link_to store.name, [:webadmin,store] %></td>
    <td><%= store.description %></td>
    <td><%= store.address %></td>
    <td><%= store.city %></td>
    <td><%= store.state.state_abbr %></td>
    <td><%= store.zip %></td>
    <td><%= store.phone %></td>
    <td><%= link_to 'Edit', edit_webadmin_store_path(store) %></td>
    <td><%= link_to 'Destroy', [:webadmin,store], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />