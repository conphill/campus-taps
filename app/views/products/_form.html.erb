    <%= f.label :name, "Size (i.e., 12pk, 1L)" %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :price %><br />
    $ <%= f.text_field :price %>
  </div>
  <div class="field">
    <%= f.label :product_category_id %><br />
    <%= f.text_field :product_category_id %>
  </div>
  <div class="field">
    <%= hidden_field_tag 'product[store_id]', @product.store.id %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
